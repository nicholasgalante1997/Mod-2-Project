<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
        <li><%= link_to 'User Home', users_path %></li>
        <li><%= link_to 'Restaurants', restaurants_path %></li>
        <li><%= link_to 'New Reservation', new_reservation_path %></li>
    
        <% if @current_user %>
        <li>Welcome <%= @current_user.username %></li>
        <li><%= link_to "Log-Out", logout_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'Sign Up', new_user_path %></li>
        <li><%= link_to "Log-In", new_login_path %></li>
        <%end%>

    </ul>



    <%= yield %>
  </body>
</html>
