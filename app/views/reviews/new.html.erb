<h1>Write A Review </h1>

<%= form_for @review do |f| %>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, @users, :id, :username %>

    <%= f.label :restaurant_id %>
    <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.submit %>
<% end %>